#############################################
# Maelstrom Environment Configuration Template
# -------------------------------------------
# Copy to .env and customize for your environment.
# Do NOT put real secrets here. Use Docker secrets
# under ./secrets and reference *_FILE variants or
# service secrets as shown in docker-compose.secrets.yml.
#############################################

##### General #####
TZ=
RETENTION_DAYS=

##### Backup Configuration #####
BACKUP_BASE_DIR=
BACKUP_RETENTION_DAYS=
BACKUP_ENCRYPTION_KEY   # prefer secret: secrets/backup_encryption_key

##### SMB Setup (optional) #####
SMB_USER                 # prefer secret: secrets/smb_user
SMB_PASSWORD             # prefer secret: secrets/smb_password
SMB_HOST_IP=
SMB_HOSTNAME=
SMB_BACKUP_DIR=

##### SNMP Setup #####
SNMP_USERNAME=
SNMP_PASSWORD            # prefer secret: secrets/snmp_password

##### InfluxDB 1.8 (UniFi metrics) #####
INFLUXDB_DB=
INFLUXDB_HTTP_AUTH_ENABLED=
INFLUXDB_ADMIN_USER=
INFLUXDB_ADMIN_PASSWORD  # prefer secret: secrets/influxdb_admin_password

##### Grafana #####
GF_SECURITY_ADMIN_USER=
GF_SECURITY_ADMIN_PASSWORD  # prefer secret: secrets/gf_security_admin_password

##### Secure Credentials (Rotated / legacy names) #####
# These map to older env names still referenced by some tooling
GRAFANA_ADMIN_USER          # prefer secret: secrets/gf_security_admin_user
GRAFANA_ADMIN_PASS          # prefer secret: secrets/gf_security_admin_password

##### UniFi Poller #####
