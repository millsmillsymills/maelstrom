POLLER_TAG=
POLLER_DEBUG=
POLLER_SAVE_DPI=
UNIFI_USER=
UNIFI_PASS                 # prefer secret: secrets/up_unifi_password
UNIFI_URL=
UNIFI_DEFAULT_URL=
UNIFI_DEFAULT_USER=
UNIFI_DEFAULT_PASS         # prefer secret: secrets/up_unifi_password

##### Image Tags (pin here; override 'latest') #####
# Pin images to reduce CVE churn and ensure reproducibility.
# Adjust as upgrades are validated. Examples below default to current values.
GRAFANA_TAG=latest
PROMETHEUS_TAG=latest
ALERTMANAGER_TAG=latest
CADVISOR_TAG=latest
NODE_EXPORTER_TAG=latest
MYSQL_EXPORTER_TAG=latest
BLACKBOX_EXPORTER_TAG=latest
SNMP_EXPORTER_TAG=latest
LOKI_TAG=latest
PROMTAIL_TAG=latest
PIHOLE_TAG=latest
ZABBIX_SERVER_TAG=latest
ZABBIX_WEB_TAG=latest
SWAG_TAG=latest
NTOPNG_TAG=latest
JAEGER_TAG=latest
PYTHON_BASE_TAG=3.11-slim

##### Pi-hole Exporter #####
PIHOLE_HOSTNAME=
PIHOLE_PASSWORD            # prefer secret: secrets/pihole_password
PIHOLE_EXPORTER_PORT=

##### Zabbix + MySQL #####
ZABBIX_DB_HOST=
ZABBIX_DB_NAME=
ZABBIX_DB_USER=
ZABBIX_DB_PASSWORD         # prefer secret: secrets/zabbix_db_password
ZABBIX_MYSQL_ROOT_PASSWORD # prefer secret: secrets/mysql_root_password
MYSQL_EXTRA_FLAGS=

##### Reverse Proxy (SWAG) #####
# Local domain (e.g., maelstrom.local) or public FQDN
SWAG_DOMAIN=
# Validation method: internal|http|dns|duckdns (use 'internal' for LAN/self-signed)
SWAG_VALIDATION=
# DNS plugin when using dns validation (e.g., cloudflare); leave blank otherwise
SWAG_DNSPLUGIN=
# Registration email for Let's Encrypt/ZeroSSL (blank when using 'internal')
SWAG_EMAIL=
# Use staging CA for testing: true|false
SWAG_STAGING=
# Only issue certs for subdomains: true|false
SWAG_ONLY_SUBDOMAINS=
# Certificate provider: letsencrypt|zerossl (ignored when using 'internal')
SWAG_CERT_PROVIDER=

##### Security Services #####
OPENVAS_ADMIN_PASSWORD     # prefer secret: secrets/openvas_admin_password
TRIVY_DB_PASSWORD          # prefer secret: secrets/trivy_db_password
VAULT_ROOT_TOKEN           # prefer secret: secrets/vault_root_token

